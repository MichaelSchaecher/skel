{
    "shellcheck.exclude": [
        "SC2148",
        "SC2034",
        "SC1090",
        "SC1091",
        "SC2116"
    ],
    "editor.fontFamily": "'FiraMono Nerd Font','Droid Sans Mono', 'monospace', monospace",
    "cSpell.enableFiletypes": [
        "shellscript"
    ],
    "cSpell.words": [
        "autocd",
        "bunzip",
        "cdspell",
        "checkwinsize",
        "cmdhist",
        "cvjf",
        "delasset",
        "dircolors",
        "erasedups",
        "extglob",
        "fdiagnostics",
        "fgrep",
        "FiraCode",
        "GROFF",
        "histappend",
        "histroy",
        "ignoredups",
        "ignorespace",
        "keygen",
        "konsole",
        "lithist",
        "pihole",
        "precmd",
        "shabang's",
        "skel",
        "srch",
        "truenas",
        "uinst",
        "winget",
        "xvjf",
        "xvzf"
    ],
    "[toml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": false,
    },
    "[shellscript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": false
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}
